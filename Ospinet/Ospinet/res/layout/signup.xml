<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
   
    android:fillViewport="true" >

  <RelativeLayout
      android:id="@+id/signupformlayout"
      android:layout_width="fill_parent"
      android:layout_height="match_parent"
      android:layout_gravity="fill_horizontal"
      android:background="#558ED5" >

  		<!--  Header Starts-->

	<include
	    android:id="@+id/appheader"
	    layout="@layout/header" />

  		<!--  Header Ends -->

	<LinearLayout
	    android:id="@+id/signupformlinerlayout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/appheader"
	    android:layout_centerHorizontal="true"
	    android:layout_margin="10dp"
	    android:background="#C3D69B"
	    android:orientation="vertical"
	    android:padding="10dp" >

		<TextView
		    android:id="@+id/tv_message"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:gravity="center_horizontal"
		    android:textColor="#E2002C"
		    android:textSize="15dp" />

		<TextView
		    android:id="@+id/signup"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center_horizontal"
		    android:text="Sign Up"
		    android:textAlignment="textEnd"
		    android:textColor="#A28E7F"
		    android:textSize="18dp"
		    android:textStyle="normal|bold" />

		<EditText
		    android:id="@+id/txt_firstname"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_margin="10dp"
		    android:background="@drawable/textbox"
		    android:hint="First Name"
		    android:singleLine="true"
		    android:textStyle="normal" />

		<EditText
		    android:id="@+id/txt_lastname"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_margin="10dp"
		    android:background="@drawable/textbox"
		    android:hint="Last Name" >

		    <requestFocus />
		</EditText>

		<EditText
		    android:id="@+id/txt_email"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_margin="10dp"
		    android:background="@drawable/textbox"
		    android:hint="Email"
		    android:inputType="textEmailAddress" />

		<EditText
		    android:id="@+id/txt_reemail"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_margin="10dp"
		    android:background="@drawable/textbox"
		    android:ems="10"
		    android:hint="Re-enter Email"
		    android:inputType="textEmailAddress" />

		<EditText
		    android:id="@+id/txt_pasword"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_margin="10dp"
		    android:background="@drawable/textbox"
		    android:ems="10"
		    android:hint="Password"
		    android:inputType="textPassword" />

		<EditText
		    android:id="@+id/txt_repassword"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_margin="10dp"
		    android:background="@drawable/textbox"
		    android:ems="10"
		    android:hint="Re-enter password"
		    android:inputType="textPassword" />

		<Button
		    android:id="@+id/btn_register"
		    style="@drawable/button_custom"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:background="@drawable/button_custom"
		    android:text="Register"
		    android:textColor="#FFFFFF" />
		    
	</LinearLayout>

  	</RelativeLayout>
  	</ScrollView>